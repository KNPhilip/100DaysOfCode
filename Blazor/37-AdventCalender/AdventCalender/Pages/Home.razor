@page "/"
@inject IJSRuntime JSRuntime

<PageTitle>Merry Christmas!</PageTitle>

<div class="calender">
    @for (int i = 0; i < 24; i++)
    {
        <div class="door">
            <a href="/@doors[i]">@doors[i]</a>
        </div>
    }
</div>

@code {
    private int[] doors = [ 
        4, 17, 19, 7, 22, 12, 2, 11, 14, 24, 13, 8, 6, 23, 3, 20, 1, 10, 18, 9, 15, 5, 21, 16 
    ];

    protected sealed override async void OnInitialized()
    {
        await JSRuntime.InvokeVoidAsync("initsnow");
    }
}
