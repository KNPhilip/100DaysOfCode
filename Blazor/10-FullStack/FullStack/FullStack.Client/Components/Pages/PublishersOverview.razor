@page "/publishers"
@rendermode @(new InteractiveAutoRenderMode(prerender: false))

@inject IPublisherInteractor PublisherInteractor

<PageTitle>Publishers</PageTitle>

@if (PublisherList.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Bio</th>
                <th>Games Count</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Publisher publisher in PublisherList)
            {
                <tr>
                    <td>@publisher.Name</td>
                    <td>@publisher.Bio</td>
                    <td>@publisher.VideoGames.Count()</td>
                    <td><a href="/edit-publisher/@publisher.Id" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                        </svg>
                    </a></td>
                    <td>
                        <button @onclick="() => DeletePublisherAsync(publisher.Id)" class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/edit-publisher" class="btn btn-primary">Create Publisher</a>
}

@code {
    List<Publisher> PublisherList { get; set; } = [];

    protected sealed override async Task OnInitializedAsync()
    {
        await UpdatePublishersAsync();
    }

    private async Task DeletePublisherAsync(int id)
    {
        await PublisherInteractor.DeletePublisherByIdAsync(id);
        await UpdatePublishersAsync();
    }

    private async Task UpdatePublishersAsync()
    {
        PublisherList = await PublisherInteractor.GetAllPublishersAsync();
    }
}
